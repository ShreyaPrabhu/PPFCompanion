<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin"
        android:focusableInTouchMode="true"
        android:layoutDirection="ltr">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin">

            <TextView
                android:id="@+id/maturity_year"
                android:text="@string/maturity_year"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/maturity_year_value"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin">

            <TextView
                android:id="@+id/maturity_amount"
                android:text="@string/maturity_amount"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/maturity_amount_value"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin">

            <TextView
                android:id="@+id/amount_deposited"
                android:text="@string/amount_deposited"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/amount_deposited_value"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin">

            <TextView
                android:id="@+id/interest_gained"
                android:text="@string/interest_gained"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/interest_gained_value"
                android:layout_weight="1.00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/recycler_margin"
        android:background="@color/recyclerview_background"
        >

    </android.support.v7.widget.RecyclerView>




</LinearLayout>
</ScrollView>