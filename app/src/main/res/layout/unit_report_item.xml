<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/MyCardViewStyle">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/S25">

                <TextView
                    android:id="@+id/StartYearTitle"
                    android:text="@string/start_year_title"
                    android:layout_height="@dimen/S25"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/StartYear"
                    android:layout_height="@dimen/S25"
                    android:layout_width="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/view_color"
                android:layout_marginBottom="@dimen/margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_margin">

                <TextView
                    android:id="@+id/OpeningBalanceTitle"
                    android:text="@string/opening_balance_title"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp" />

                <TextView
                    android:id="@+id/OpeningBalance"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_margin">

                <TextView
                    android:id="@+id/AmountDepositedTitle"
                    android:text="@string/amount_deposited_title"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp"/>

                <TextView
                    android:id="@+id/AmountDeposited"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_margin">

                <TextView
                    android:id="@+id/InterestEarnedTitle"
                    android:text="@string/interest_earned_title"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp"/>

                <TextView
                    android:id="@+id/InterestEarned"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_margin">

                <TextView
                    android:id="@+id/ClosingBalanceTitle"
                    android:text="@string/closing_balance_title"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp"/>

                <TextView
                    android:id="@+id/ClosingBalance"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:layout_width="0dp"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
